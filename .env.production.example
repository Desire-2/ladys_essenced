# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@host:port/database_name
DB_PASSWORD=your-strong-database-password

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-min-256-bits
SECRET_KEY=your-flask-secret-key-min-256-bits

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://ladys-essenced.vercel.app,https://www.ladys-essenced.vercel.app

# API URL for frontend (should point to backend)
NEXT_PUBLIC_API_URL=https://ladys-essenced.onrender.com

# Backend URL for Next.js rewrites
BACKEND_URL=https://ladys-essenced.onrender.com

# Logging Level
LOG_LEVEL=WARNING
